{
  "$schema": "https://schemas.wp.org/wp/6.8/theme.json",
  "version": 3,
  "settings": {
    "blocks": {
      "core/heading": {
        "typography": {
          "fontWeight": true
        }
      },
      "core/stack": {
        "layout": {
          "allowSwitching": true,
          "allowVerticalAlignment": true,
          "allowJustification": true
        }
      },
      "core/image": {
        "dimensions": {
          "width": true,
          "minWidth": true,
          "maxWidth": true
        }
      }
    },
    "color": {
      "defaultPalette": false,
      "custom": true,
      "palette": [
        { "name": "Yellow", "slug": "yellow", "color": "#fdbb30" },
        { "name": "DarkBlue", "slug": "dark-blue", "color": "#135a70" },
        { "name": "LightBlue", "slug": "light-blue", "color": "#80bdd9" },
        { "name": "VeryLightBlue", "slug": "very-light-blue", "color": "#e8f3f8" },
        { "name": "Medium", "slug": "medium-blue", "color": "#6fa8be" },
        { "name": "White", "slug": "white", "color": "#ffffff" },
        { "name": "Black", "slug": "black", "color": "#000000" },
        { "name": "LightGray", "slug": "light-gray", "color": "#f0f2f0" },
        { "name": "DarkGray", "slug": "dark-gray", "color": "#636363" }
      ]
    },
    "appearanceTools": true,
    "border": {
      "radius": true
    },
    "layout": {
      "contentSize": "1400px",
      "wideSize": "1400px"
    },
    "spacing": {
      "blockGap": "1.5rem",
      "units": [ "%", "px", "em", "rem", "vh", "vw" ]
    },
    "typography": {
      "customFontWeight": true,
      "fontWeight": true,
      "fontFamilies": [
        {
          "fontFamily": "'Saira', sans-serif",
          "name": "Saira",
          "slug": "saira"
        }
      ]
    },
    "custom": {
      "radius": {
        "s": "8px",
        "m": "16px",
        "l": "24px",
        "xl": "36px",
        "pill": "9999px"
      }
    }
  },
  "styles": {
    "layout": {
      "type": "default"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--saira)"
    },
    "blocks": {
      "bk-theme/content-bubble": {
        "border": {
          "radius": "var(--wp--custom--radius--m)"
        }
      },
      "core/group": {
        "spacing": {
          "blockGap": "var(--wp--style--block-gap, 1.5rem)"
        }
      },
      "core/columns": {
        "spacing": {
          "blockGap": "var(--wp--style--block-gap, 1.5rem)"
        }
      },
      "core/row": {
        "spacing": {
          "blockGap": "var(--wp--style--block-gap, 1.5rem)"
        }
      },
      "core/post-content": {
        "spacing": {
          "padding": {
            "left": "1.5rem",
            "right": "1.5rem"
          }
        }
      }
    }
  },
  "templateParts": [
    { "area": "header", "name": "header", "title": "Header" },
    { "area": "footer", "name": "footer", "title": "Footer" }
  ]
}
