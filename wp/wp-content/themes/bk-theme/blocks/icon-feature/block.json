{
  "apiVersion": 2,
  "name": "bk/icon-feature",
  "title": "Icon Feature",
  "category": "design",
  "icon": "star-filled",
  "description": "A feature card with icon, arrow, subtitle and text.",
  "keywords": ["icon", "feature", "card"],
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "attributes": {
    "iconUrl": {
      "type": "string",
      "source": "attribute",
      "selector": "img",
      "attribute": "src",
      "default": ""
    },
    "showArrow": { "type": "boolean", "default": true },
    "title": {
      "type": "string",
      "source": "html",
      "selector": "h3",
      "default": "Icon Feature"
    },
    "text": {
      "type": "string",
      "source": "html",
      "selector": "p",
      "default": "A block with icons on top and text at the bottom."
    },
    "iconColor": { "type": "string", "default": "" },
    "arrowColor": { "type": "string", "default": "" },
    "titleColor": { "type": "string", "default": "" },
    "textColor": { "type": "string", "default": "" }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css"
}
