{
  "$schema": "https://schemas.wp.org/wp/6.8/block.json",
  "apiVersion": 2,
  "name": "bk-theme/review-carousel",
  "title": "Review Carousel",
  "category": "widgets",
  "icon": "format-quote",
  "description": "A carousel of customer reviews with logos and testimonials.",
  "style": "file:style.css",
  "editorStyle": "file:editor.css",
  "editorScript": "file:index.js",
  "script": "file:frontend.js",
  "render": "file:render.php",
  "attributes": {
    "title": {
      "type": "string",
      "default": "Wat onze klanten zeggen"
    },
    "reviews": {
      "type": "array",
      "default": []
    }
  },
  "supports": {
    "html": false,
    "align": false
  }
}
