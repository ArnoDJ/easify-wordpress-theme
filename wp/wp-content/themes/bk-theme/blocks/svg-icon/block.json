{
  "apiVersion": 3,
  "name": "bk-theme/svg-icon",
  "title": "SVG Icon",
  "category": "design",
  "icon": "format-image",
  "description": "Insert an SVG icon with full styling control.",
  "supports": {
    "align": [ "left", "center", "right" ],
    "color": { "text": true }
  },
  "attributes": {
  "iconSvg": {
    "type": "string",
    "default": ""
  },
  "showArrow": { "type": "boolean", "default": true },
  "title": { "type": "string", "source": "html", "selector": "h3", "default": "Icon Feature" },
  "text": { "type": "string", "source": "html", "selector": "p", "default": "A block with icons on top and text at the bottom." },
  "iconColor": { "type": "string", "default": "" },
  "arrowColor": { "type": "string", "default": "" },
  "titleColor": { "type": "string", "default": "" },
  "textColor": { "type": "string", "default": "" }
}

  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css"
}
