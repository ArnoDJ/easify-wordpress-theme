{
  "apiVersion": 3,
  "name": "bk-theme/content-bubble",
  "title": "Content Bubble",
  "category": "design",
  "icon": "align-left",
  "description": "Rounded container that holds any blocks.",
  "supports": {
    "align": ["left","right","center","wide","full"],
    "color": { "background": true, "gradients": true },
    "spacing": { "padding": true, "margin": ["top","bottom"] },
    "border": { "radius": true },
    "anchor": true,
    "className": true,
    "layout": {
      "flex": true,
      "alignItems": true
    }
  },
  "attributes": {
    "radiusChoice": { "type": "string", "default": "m" },        
    "roundSide":    { "type": "string", "default": "both" },       
    "gapSide":      { "type": "string", "default": "none" },       
    "gapSize":      { "type": "string", "default": "" }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css"
}
